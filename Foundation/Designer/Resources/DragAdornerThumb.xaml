<UserControl x:Class="Wss.Foundation.Designer.Resources.DragAdornerThumb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:designer="clr-namespace:Wss.Foundation.Designer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Cursor="SizeAll">
        <designer:DragThumb x:Name="Drag"  Cursor="SizeAll" ThumbUpdated="OnThumbUpdated">
            <Thumb.Template>
                <ControlTemplate>
                    <Rectangle Fill="Transparent" />
                </ControlTemplate>
            </Thumb.Template>
        </designer:DragThumb>
            
    </Grid>
</UserControl>
